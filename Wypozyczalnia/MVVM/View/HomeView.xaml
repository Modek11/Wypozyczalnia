<Window x:Class="Wypozyczalnia.MVVM.View.HomeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wypozyczalnia.MVVM.View" xmlns:core="clr-namespace:Wypozyczalnia.Core" d:DataContext="{d:DesignInstance Type=core:ObservableObject}"
        xmlns:viewModel="clr-namespace:Wypozyczalnia.MVVM.ViewModel"  
        mc:Ignorable="d"
                Title="Home" Height="450" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#181735">
    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition></RowDefinition>


        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="79*"></ColumnDefinition>
            <ColumnDefinition Width="30*"></ColumnDefinition>
            <ColumnDefinition Width="51*"/>
        </Grid.ColumnDefinitions>
        <Grid Background="#0F0F20" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40*"/>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="30*"/>
                <ColumnDefinition Width="60*"/>
                <ColumnDefinition Width="25*"/>

            </Grid.ColumnDefinitions>
            <Button x:Name="homeBarSwitch" Content="Home" Foreground="White" HorizontalAlignment="Center" FontWeight="Light" Grid.Column="0" Height="16" Margin="0,0,0,0" Click="homeBarhomeClick"/>
            <RadioButton x:Name="homeBarYourCarRentals" Content="Twoje wypożyczenia" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Light" Grid.Column="1" Height="21" Margin="14,2,148,2" Width="152"  Style="{StaticResource MenuButtonTheme}" Grid.ColumnSpan="2" Command="{Binding RentaCarViewCommand}"/>
            <RadioButton x:Name="homeBarContact" Content="Kontakt" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Light" Grid.Column="3" Margin="10,4,182,5" Width="90" Height="16" Style="{StaticResource MenuButtonTheme}"  Grid.ColumnSpan="2" Command="{Binding ContactViewCommand}" />
            <Button x:Name="homeBarChangePassword" Content="Zmiana hasła" HorizontalAlignment="Right" Foreground="White" FontSize="14" FontWeight="Medium" Margin="0,0,0,0" Grid.Column="4" >
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#Fe6584"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#ff4c70"/>
                            </Trigger>

                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button x:Name="homeBarLogOut" Content="Wyloguj" HorizontalAlignment="Right" Foreground="White" FontSize="14" FontWeight="Medium" Margin="0,0,10,0" Grid.Column="5" Click="homeBarLogOut_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#Fe6584"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#ff4c70"/>
                            </Trigger>

                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
        <StackPanel Grid.Row="1" Grid.ColumnSpan="3">
            <TextBlock Margin="30,30,30,0" Text="99rent to sprawdzona wypożyczalnia samochodów oferująca wynajem samochodów  m.in. w Warszawie, Łodzi, Lublinie, Rzeszowie, Krakowie, Katowicach, Wrocławiu, Poznaniu, Szczecinie, Gdyni, Białymstoku, Bydgoszczy i Trójmieście oraz w pozostałych miastach sieci 39 oddziałów w całej Polsce."
                   Foreground="White" FontSize="15" FontWeight="Light" TextWrapping="Wrap" />
            <TextBlock Margin="30,30,30,0" Text="Działamy na rynku od 2008 roku – od tej pory poprzez dynamiczny i nieustanny rozwój przedsiębiorstwa, zajęliśmy czołowe miejsce na rynku wypożyczalni samochodów w Polsce. Dwukrotnie zostaliśmy nagrodzeni prestiżową nagrodą FLEET DERBY za rok 2013 i 2014 oraz za 2018, a także nagrodami DIAMENT FORBES 2016 i EKOFLOTA 2016 i GEPARD BIZNESU."
                   Foreground="White" FontSize="15" FontWeight="Light" TextWrapping="Wrap" />
            <TextBlock Margin="30,30,30,0" Text="Naszą stabilną pozycję rynkową potwierdza przynależność do Grupy Firm Rent a Car, która skupia liderów wśród wypożyczalni samochodów w Polsce, działającej w ramach struktury organizacyjnej Polskiego Związku Wynajmu i Leasingu Pojazdów. Jesteśmy także Oficjalnym Partnerem Reprezentacji Polski w Piłce Nożnej. Nasza flota składa się z ponad 2000 sprawdzonych modeli, dających Klientowi satysfakcję z ich użytkowania."
                   Foreground="White" FontSize="15" FontWeight="Light" TextWrapping="Wrap" />
        </StackPanel>
        <ContentControl Grid.Row="1" Grid.ColumnSpan="3" Content="{Binding CurrentView}"/>
    </Grid>

</Window>
