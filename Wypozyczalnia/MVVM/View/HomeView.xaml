<Window x:Class="Wypozyczalnia.MVVM.View.HomeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wypozyczalnia.MVVM.View" xmlns:core="clr-namespace:Wypozyczalnia.Core" d:DataContext="{d:DesignInstance Type=core:ObservableObject}"
        xmlns:viewModel="clr-namespace:Wypozyczalnia.MVVM.ViewModel"  
        mc:Ignorable="d"
                Title="Home" Height="450" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#181735">
    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition></RowDefinition>


        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="79*"></ColumnDefinition>
            <ColumnDefinition Width="30*"></ColumnDefinition>
            <ColumnDefinition Width="51*"/>
        </Grid.ColumnDefinitions>
        <Grid Background="#0F0F20" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="125*"/>
                <ColumnDefinition Width="157*"/>
                <ColumnDefinition Width="93*"/>
                <ColumnDefinition Width="64*"/>
                <ColumnDefinition Width="94*"/>
                <ColumnDefinition Width="188*"/>
                <ColumnDefinition Width="78*"/>

            </Grid.ColumnDefinitions>
            <RadioButton x:Name="homeBarReturnHome" Content="Home" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left" FontWeight="Light" Height="21" Width="152" Style="{StaticResource MenuButtonTheme}" Grid.ColumnSpan="2" Command="{Binding HomeContentViewCommand}" RenderTransformOrigin="-0.493,0.857" IsChecked="{Binding IsChecked}" />
            <RadioButton x:Name="homeBarYourCarRentals" Content="Twoje wypożyczenia" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left" FontWeight="Light" Grid.Column="1" Height="21" Margin="5,0,0,0" Width="152"  Style="{StaticResource MenuButtonTheme}" Command="{Binding RentHistoryViewCommand}"/>
            <RadioButton x:Name="homeBarRentaCar" Content="Wypożycz" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Center" FontWeight="Light" Grid.Column="2" Margin="0,7,0,0" Width="110" Height="16" Style="{StaticResource MenuButtonTheme}" Command="{Binding RentaCarViewCommand}" />
            <RadioButton x:Name="homeBarContact" Content="Kontakt" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Left" FontWeight="Light" Grid.Column="3" Margin="25,8,0,0" Width="90" Height="16" Style="{StaticResource MenuButtonTheme}"  Grid.ColumnSpan="2" Command="{Binding ContactViewCommand}" />

            <Button x:Name="homeBarChangePassword" Content="Zmiana hasła" HorizontalAlignment="Left" Foreground="White" FontSize="14" FontWeight="Medium" Margin="101,0,0,0" Grid.Column="5" Grid.ColumnSpan="2" >
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#Fe6584"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#ff4c70"/>
                            </Trigger>

                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button x:Name="homeBarLogOut" Content="Wyloguj" HorizontalAlignment="Center" Foreground="White" FontSize="14" FontWeight="Medium" Grid.Column="6" Click="homeBarLogOut_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#Fe6584"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#ff4c70"/>
                            </Trigger>

                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

        </Grid>
        <ContentControl Grid.Row="1" Grid.ColumnSpan="3" Content="{Binding CurrentView}"/>


    </Grid>

</Window>
